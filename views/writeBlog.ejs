<form action="/submit" method="POST">
    <textarea 
        name="blog" 
        rows="30" 
        cols="100" 
        placeholder="Write your blog here..." 
        style="width: 100%; font-family: Arial, sans-serif; font-size: 16px; padding: 10px;"
    ></textarea>
    <div style="margin-top: 15px;">
        <button type="submit" style="padding: 10px 20px; font-size: 16px; cursor: pointer;">Submit</button>
        <button type="reset" style="padding: 10px 20px; font-size: 16px; cursor: pointer;">Reset</button>
    </div>
</form>
